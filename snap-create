usage() {
    echo "usage: $(basename $0) [OPTIONS] SRC DST"
    echo ''
    echo 'options:'
    echo '  -r               Create a readonly snapshot'
    echo '  -t TYPE          Add a snapshot type description'
    echo ''
    echo 'common options:'
    echo '  -h               Show this page and exit'
}

OPTS=""

while getopts "rt:h" arg; do
    case "$arg" in
        r)  OPTS="$OPTS -r";;
        t)  SNAP_TYPE="$OPTARG";;
        h)  usage && exit 0;;
    esac
done

if [ "$#" -lt 2 ]; then
    usage
    exit 1
fi

shift $((OPTIND - 1))

SNAP_PATTERN="$(date +%Y-%m-%d-%H%M%S)"
SRC="$1"
SNAP_BASEDIR="$2"

if [ -z "$SNAP_TYPE" ]; then
    DST="${SNAP_BASEDIR}/$(basename $SRC)_$SNAP_PATTERN"
else
    DST="${SNAP_BASEDIR}/$(basename $SRC)_${SNAP_TYPE}_$SNAP_PATTERN"
fi

btrfs subvolume snapshot $OPTS "$SRC" "$DST"
